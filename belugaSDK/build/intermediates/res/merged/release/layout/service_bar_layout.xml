<?xml version="1.0" encoding="utf-8"?>
<com.hosengamers.beluga.layout.widget.ClipRevealFrame xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
     
    <com.hosengamers.beluga.layout.widget.ArcLayout
        android:id="@+id/arc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/scrim"
        app:arc_axisRadius="@dimen/layout_child_offset_tumblr"
        app:arc_origin="center"
        app:arc_radius="@dimen/layout_radius_tumblr" 
        android:layout_gravity="center">
                
         <LinearLayout 
            android:id="@+id/acount_linear_layout"
     		android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:orientation="vertical" >

		    	<ImageButton
		    	    android:id="@+id/service_account_btn"
		    	    style="@style/Item.Tumblr"
		    	    android:src="@drawable/guser" 
		    	    android:background="@drawable/tumblr_blue_oval"/>
		    	
		    	<TextView
		    	    android:id="@+id/acount_text_view"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:layout_gravity="center"
		    	    android:text="acount"
		    	    android:textSize="10sp" />

		</LinearLayout>
		
        <LinearLayout 
            android:id="@+id/custom_service_linear_layout"
     		android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:orientation="vertical" >

		     <ImageButton
		         android:id="@+id/custom_service_btn"
		         style="@style/Item.Tumblr"
		         android:background="@drawable/tumblr_green_oval"
		         android:src="@drawable/custom_service_icon" />
		     
		     <TextView
		         android:id="@+id/custom_service_text_view"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_gravity="center"
		         android:text="custom\nservice"
		         android:textSize="10sp" />

		  </LinearLayout>
		  
        <Button
                    style="@style/Item.Tumblr"
                    android:text="A"
                    android:background="@drawable/tumblr_orange_oval"
                    />

            <Button
                    style="@style/Item.Tumblr"
                    android:text="B"
                    android:background="@drawable/tumblr_green_oval"
                    />

            <Button
                    style="@style/Item.Tumblr"
                    android:text="C"
                    android:background="@drawable/tumblr_white_oval"
                    />
		
         
                
     </com.hosengamers.beluga.layout.widget.ArcLayout>
    
     
    
    
    
    <LinearLayout 
            android:id="@+id/close_linear_layout"
     		android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:orientation="vertical" 
     		android:layout_gravity="center">

		     <ImageButton
		         android:id="@+id/close_service_btn"
		         style="@style/Item.Tumblr"
		         android:background="@drawable/tumblr_red_oval"
		         android:src="@drawable/service_close" />
		     
		     <TextView
		         android:id="@+id/close_service_text_view"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_gravity="center"
		         android:text="close"
		         android:textSize="10sp"
	
		         />

		    </LinearLayout>
            
     
     

        
</com.hosengamers.beluga.layout.widget.ClipRevealFrame>